<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:passcodeView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVERIFY"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wrapper_otp_hint"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_otp_activity"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/btn_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_marginTop="@dimen/btn_radius"
                android:id="@+id/mobile_number_wrapper"
                android:layout_width="0sp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/MobileHint"
                />
            <TextView
                android:id="@+id/edit"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_mode_edit_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
   <RelativeLayout
       android:layout_gravity="center"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="@dimen/parent_layout_padding">

      <LinearLayout
          android:padding="@dimen/logo_margin_bototm"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <online.devliving.passcodeview.PasscodeView
              android:id="@+id/passcode_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:controlColorActivated="@color/accent"
              app:controlColor="@color/colorPrimaryDark"
              app:digitColorBorder="@color/accent"
              app:digitColorFilled="@color/colorPrimaryLight"
              passcodeView:numDigits="4" />
      </LinearLayout>
       <Button
            android:layout_centerInParent="true"
           android:id="@+id/btn_verify"
           android:layout_margin="@dimen/otp_verify_margin"
           android:textColor="@color/white"
           android:background="@drawable/btn_primary_gradient"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/verify"
           android:drawableEnd="@drawable/arroe_right"
           android:drawablePadding="@dimen/padding_4"
           />
   </RelativeLayout>

</LinearLayout>