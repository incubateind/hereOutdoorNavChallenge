<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <TextView
        android:layout_marginTop="@dimen/margin_top_view"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/parent_layout_padding"
        android:text="@string/letsgetStarted"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        />
    <ImageView
        android:layout_marginTop="@dimen/logo_margin_bototm"
        android:layout_marginBottom="@dimen/logo_margin_bototm"
        android:layout_gravity="center"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:src="@drawable/logo"
        />
    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/login_background"
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="4sp"
            android:inputType="number"
            android:layout_marginBottom="10sp"
            android:background="@drawable/input_back_accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/MobileHint"
            android:id="@+id/inputmobile"
            />

        <Button android:background="@drawable/btn_primary_gradient"
            android:layout_marginTop="@dimen/margin_top_view"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginBtn"
            android:id="@+id/login_btn"
            android:drawableRight="@drawable/arroe_right"
            android:drawablePadding="@dimen/padding_4"
            android:layout_marginBottom="@dimen/logo_margin_bototm"
            />

    </LinearLayout>

</LinearLayout>